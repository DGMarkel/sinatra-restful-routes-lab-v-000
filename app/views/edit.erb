<h1>Recipe Editor</h1>

<form action="/recipes/<%= @recipe.id %>" method="post">

  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="name">Name:
    <input type="text" name="name" id="name" value="<% @recipe.name %>">
  </label><br>

  <label for="ingredients">Ingredients:
    <input type="text" name="ingredients" id="ingredients" value="<% @recipe.ingredients %>">
  </label><br>

  <label for="cook_time">Cook Time:
    <input type="text" name="cook_time" id="cook_time" value="<% @recipes.cook_time %>">
  </label><br>

  <input type="submit" value="Submit">
</form>
